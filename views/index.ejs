<!DOCTYPE html>
<html lang="id">
<head>
    <%- include('partials/head') %>
</head>
<body class="text-slate-900 pb-12 bg-slate-50">

    <%- include('partials/header') %>

    <main class="max-w-6xl mx-auto px-4 py-8">
        
        <%- include('partials/search') %>

        <%- include('partials/loading') %>

        <% if (error) { %>
            <%- include('partials/error') %>
        <% } %>

        <% if (data) { %>
            <div class="space-y-8 animate-fade-in">
                
                <div>
                    <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-[10px] font-black uppercase tracking-widest mb-2 inline-block">Wilayah Terdeteksi</span>
                    <h2 class="text-4xl font-black text-gray-900"><%= data.location %></h2>
                </div>

                <%- include('partials/forecast') %>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    
                    <div class="space-y-6">
                        <%- include('partials/gauge') %>
                        <%- include('partials/recommendations') %>
                    </div>

                    <div class="md:col-span-2 space-y-6">
                        <%- include('partials/summary') %>
                        <%- include('partials/factors') %>
                        <%- include('partials/chart') %>
                    </div>
                </div>
            </div>
        <% } %>

    </main>

    <script>
        // Inisialisasi Icons setelah semua partial termuat
        lucide.createIcons();
    </script>
</body>
</html>
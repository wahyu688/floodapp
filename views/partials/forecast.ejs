<div class="space-y-4">
    <div class="flex items-center gap-2 font-bold text-gray-700">
        <i data-lucide="calendar-days" class="text-blue-600"></i>
        Prediksi Lintas Horizon
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <% data.forecasts.forEach(function(f) { 
            let colorClass = f.riskLevel === 'BAHAYA' ? 'text-red-600 bg-red-50 border-red-100' : 
                           (f.riskLevel === 'WASPADA' ? 'text-yellow-600 bg-yellow-50 border-yellow-100' : 'text-green-600 bg-green-50 border-green-100');
        %>
            <div class="p-5 rounded-2xl border <%= colorClass %> shadow-sm hover:scale-[1.02] transition-transform">
                <div class="flex items-center justify-between mb-3">
                    <div class="flex items-center gap-2 font-bold uppercase text-xs tracking-wider opacity-80">
                        <i data-lucide="<%= f.period.includes('Hari') ? 'clock' : 'calendar' %>" width="16"></i>
                        <%= f.period %>
                    </div>
                    <span class="text-xs font-black px-2 py-0.5 rounded-full bg-white bg-opacity-50"><%= f.probability %>%</span>
                </div>
                <div class="text-xl font-black mb-1"><%= f.riskLevel %></div>
                <p class="text-xs leading-relaxed opacity-90"><%= f.reasoning %></p>
            </div>
        <% }); %>
    </div>
</div>
<div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
    <div class="flex items-center gap-2 mb-3 text-blue-600">
        <i data-lucide="info"></i>
        <h3 class="font-bold">Protokol Keselamatan</h3>
    </div>
    <p class="text-gray-700 text-sm leading-relaxed"><%= data.recommendation %></p>
</div>

<% if (data.sources && data.sources.length > 0) { %>
    <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 mt-4">
        <h3 class="text-xs font-black text-gray-400 mb-3 uppercase tracking-widest flex items-center gap-2">
            <i data-lucide="external-link" width="14"></i> Referensi
        </h3>
        <ul class="space-y-3">
            <% data.sources.forEach(function(source) { %>
                <% if(source.web) { %>
                <li>
                    <a href="<%= source.web.uri %>" target="_blank" class="text-xs text-blue-600 hover:text-blue-800 font-medium block truncate">
                        â€¢ <%= source.web.title %>
                    </a>
                </li>
                <% } %>
            <% }); %>
        </ul>
    </div>
<% } %>